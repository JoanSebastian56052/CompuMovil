<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_personal_info"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activityName1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="21dp"
        android:fontFamily="serif-monospace"
        android:textSize="30dp"
        android:id="@+id/txtInfPer"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtInfPer"
        android:orientation="vertical"
        android:id="@+id/layoutData">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_add_black_24dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="21dp"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nombre"
                android:inputType="textPersonName|textCapWords|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="21dp"
                android:fontFamily="serif-monospace"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_add_black_24dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="21dp"/>/>
            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/apellido"
                android:inputType="textCapSentences|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="21dp"
                android:fontFamily="serif-monospace"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people_black_24dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="21dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sexo"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="21dp"
                android:fontFamily="serif-monospace"
                android:textSize="20dp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/sexo"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/genderF"
                    android:text="@string/femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/femenino"
                    android:checked="false"
                    android:fontFamily="serif-monospace"
                    android:textSize="16dp"/>

                <RadioButton android:id="@+id/genderM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/masculino"
                    android:checked="false"
                    android:fontFamily="serif-monospace"
                    android:textSize="16dp"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutData"
        android:orientation="horizontal"
        android:id="@+id/layoutBirth">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_today_black_24dp" />

        <TextView
            android:id="@+id/txtDate"
            android:text="@string/birthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_date"
            android:onClick="showDatePickerDialog"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif-monospace"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBirth"
        android:id="@+id/layoutGradeSchool">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_school_black_24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gradeSchool"
            android:entries="@array/gradeSchool_array"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"
            android:textAlignment="center">
        </Spinner>
    </LinearLayout>
    <Button
        android:text="@string/nameButtom"
        android:fontFamily="serif-monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:id="@+id/btnNext"
        android:onClick="showNextActivity"
        android:layout_below="@+id/layoutGradeSchool"/>
</RelativeLayout>
